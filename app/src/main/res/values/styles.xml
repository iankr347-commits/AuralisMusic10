<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Auralis Light Theme (Default) -->
    <style name="Theme.Auralis" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/auralis_background_light</item>
        <item name="android:enforceNavigationBarContrast" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Auralis Dark Theme -->
    <style name="Theme.Auralis.Dark" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/auralis_background_dark</item>
        <item name="android:enforceNavigationBarContrast" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Auralis Pure Black (AMOLED) Theme -->
    <style name="Theme.Auralis.PureBlack" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/auralis_background_pure_black</item>
        <item name="android:enforceNavigationBarContrast" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
